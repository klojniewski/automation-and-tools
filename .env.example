# Pipedrive API — get from Settings > Personal Preferences > API
PIPEDRIVE_API_TOKEN=your_pipedrive_api_token
PIPEDRIVE_USER_ID=your_pipedrive_user_id
PIPEDRIVE_DOMAIN=your_company_domain  # e.g. "mycompany" from mycompany.pipedrive.com

# Anthropic (Claude) API key
ANTHROPIC_API_KEY=sk-ant-your_key_here

# Gmail OAuth2 — download credentials.json from Google Cloud Console
# See: https://developers.google.com/gmail/api/quickstart/nodejs
GMAIL_CREDENTIALS_PATH=./credentials.json
GMAIL_TOKEN_PATH=./token.json
