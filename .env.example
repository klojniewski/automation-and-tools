# Trigger.dev — project ref from dashboard (e.g. "proj_abc123")
TRIGGER_PROJECT_REF=proj_your_project_ref

# Pipedrive API — get from Settings > Personal Preferences > API
PIPEDRIVE_API_TOKEN=your_pipedrive_api_token
PIPEDRIVE_USER_ID=your_pipedrive_user_id
PIPEDRIVE_DOMAIN=your_company_domain  # e.g. "mycompany" from mycompany.pipedrive.com

# Anthropic (Claude) API key
ANTHROPIC_API_KEY=sk-ant-your_key_here

# Google service account (GA4 + Sheets) — base64-encoded JSON key
# Create at: Google Cloud Console > IAM > Service Accounts > Create Key (JSON)
# Encode: base64 -i service-account-key.json | tr -d '\n'
GOOGLE_SERVICE_ACCOUNT_KEY=base64_encoded_service_account_json

# Gmail OAuth2 — for deal analysis email history
# Extract from existing credentials.json and token.json
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_GMAIL_REFRESH_TOKEN=your_gmail_refresh_token

# Legacy: local CLI paths (used when running locally without service account)
GMAIL_CREDENTIALS_PATH=./credentials.json
GMAIL_TOKEN_PATH=./token.json

# GA4 + Google Sheets
GA4_PROPERTY_ID=your_ga4_property_id
GOOGLE_SHEETS_ID=your_google_sheet_id
GOOGLE_SHEETS_TAB=Sheet1
